%head
  %title
    = "Saturn - #{content_for?(:page_title) ? yield(:page_title) : "Scheduling"}"

  = csrf_meta_tag
  = formtastic_stylesheet_link_tag
  = stylesheet_link_tag "application"
  = stylesheet_link_tag "print", :media => :print
  = stylesheet_link_tag "jquery/smoothness/jquery-ui-1.8.7.custom", "jquery.jnotify.min"
  = yield :stylesheets
  = javascript_include_tag :defaults, :cache => "cache/shared"
  = yield :javascripts
  = javascript_include_tag "jquery.jnotify.min", "shared/flash", :cache => "cache/notification"

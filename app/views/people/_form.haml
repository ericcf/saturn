%h2= "Editing Aliases for #{@person.full_name}"

= form_for @person do |person_form|
  = person_form.fields_for :names_alias do |alias_form|
    %div= alias_form.label :short_name
    %div= alias_form.text_field :short_name
    %div= alias_form.label :initials
    %div= alias_form.text_field :initials
  %div
    = save_or_cancel person_form, people_path

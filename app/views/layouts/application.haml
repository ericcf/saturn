!!!
%html
  %head
    %title
      = "Saturn - #{content_for?(:page_title) ? yield(:page_title) : "Scheduling"}"

    = csrf_meta_tag
    = formtastic_stylesheet_link_tag
    = stylesheet_link_tag "application"
    = stylesheet_link_tag "print", :media => :print
    = stylesheet_link_tag "jquery/smoothness/jquery-ui-1.8.7.custom", "jquery.jnotify.min"
    = yield :stylesheets
    = javascript_include_tag :defaults, :cache => "cache/shared"
    = yield :javascripts
    = javascript_include_tag "jquery.jnotify.min", "shared/flash", :cache => "cache/notification"

  %body
    %div#header
      %h1#logo
        = link_to "Saturn", root_path
      %div#top-menu
        %ul
          -#!= nav_item "Residents", resident_rotations_path
          != nav_item "Home", root_path, {}, nil, nil, /\/$/
          != nav_item "On Call", weekly_call_schedule_path
          != nav_item "Sections", sections_path
          != nav_item "Conferences", conferences_path
          != nav_item "Physicians", physicians_path, {}, :manage, Physician
          != nav_item "Admin", admin_path, {}, :manage, :all
    %div#personal-wrapper
      %div#personal
        %div
          = Date.today.strftime("%A, %B #{Date.today.day}, %Y")
          |
          = render "deadbolt/shared_partials/personal"
    = render "shared/flash_banner.html"
    %div#main
      = yield :content_menu
      = yield :layout

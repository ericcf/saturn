!!!
%html
  %head
    %title
      = controller.controller_name
      = controller.action_name

    = stylesheet_link_tag "application"
    = stylesheet_link_tag "print", :media => :print
    = yield :stylesheets
    = javascript_include_tag "jquery/jquery-1.4.2.min"
    = yield :javascripts
    = javascript_include_tag "shared/flash"

  %body
    %h1#logo
      = link_to "Scheduler", root_path
    %div#top-menu-wrapper
      %div#top-menu
        %ul
          != nav_item "On Call", weekly_call_schedule_path
          != nav_item "Sections", sections_path
          != nav_item "People", people_path, :manage, Person
    %div#personal-wrapper
      %div#personal
        %div
          - if user_signed_in?
            %span.first= current_user.email
            %span= link_to "Sign out", destroy_user_session_path
          - else
            %span= link_to "Sign in", new_user_session_path
    = render "shared/flash_banner"
    %div#main
      - if @section && !@section.new_record?
        %h2= @section.title
        %div.navcontainer
          %ul.navlist
            != nav_item "View Schedule", weekly_section_schedule_path(@section)
            != nav_item "Vacation Requests", section_vacation_requests_path(@section)
            != nav_item "Edit Schedule", edit_weekly_section_schedule_path(@section, :year => Date.today.year, :month => Date.today.month, :day => Date.today.day), :update, WeeklySchedule
            != nav_item "Members", section_memberships_path(@section), :manage, SectionMembership
            != nav_item "Shifts", section_shifts_path(@section), :manage, Shift
            != nav_item "Shift Categories", section_shift_tags_path(@section), :manage, ShiftTag
            != nav_item "Reports", section_shift_totals_path(@section)
      = yield :layout

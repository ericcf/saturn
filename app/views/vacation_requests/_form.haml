- content_for :content_menu do
  = render "schedules/section_menu"

:javascript
  $(function() {
    var onSelected = function(selectedDate) {
      var option = this.id == "vacation_request_start_date_datepicker" ? "minDate" : "maxDate";
      instance = $( this ).data( "datepicker" );
      date = $.datepicker.parseDate(
        instance.settings.dateFormat ||
        $.datepicker._defaults.dateFormat, selectedDate, instance.settings);
      var dates = $("#vacation_request_start_date_datepicker, #vacation_request_end_date_datepicker").datepicker();
      dates.not( this ).datepicker( "option", option, date );
    };

    $("#vacation_request_start_date").hide();
    $("<input type=\"text\" id=\"vacation_request_start_date_datepicker\"/>").
    insertAfter("#vacation_request_start_date").
    datepicker({
      numberOfMonths: 3,
      minDate: new Date(),
      altField: "#vacation_request_start_date",
      altFormat: "yy-mm-dd",
      dateFormat: "DD, MM d, yy",
      autoSize: true,
      onSelect: onSelected
    });
    var start_date = $("#vacation_request_start_date").val();
    $("#vacation_request_start_date_datepicker").datepicker("setDate",
      $.datepicker.parseDate("yy-mm-dd", start_date));
    $("#vacation_request_end_date").hide();
    $("<input type=\"text\" id=\"vacation_request_end_date_datepicker\"/>").
    insertAfter("#vacation_request_end_date").
    datepicker({
      numberOfMonths: 3,
      minDate: new Date(),
      altField: "#vacation_request_end_date",
      altFormat: "yy-mm-dd",
      dateFormat: "DD, MM d, yy",
      autoSize: true,
      onSelect: onSelected
    });
    var end_date = $("#vacation_request_end_date").val();
    $("#vacation_request_end_date_datepicker").datepicker("setDate",
      $.datepicker.parseDate("yy-mm-dd", end_date));
  });

%div.form-container
  = semantic_form_for [@section, @vacation_request] do |vacation_request_form|
    = vacation_request_form.inputs do
      = vacation_request_form.input :requester, :as => :select, :collection => @section.members
      = vacation_request_form.input :start_date, :as => :string
      = vacation_request_form.input :end_date, :as => :string
      -#= vacation_request_form.input :comments, :input_html => { :rows => 5 }
    = vacation_request_form.buttons do
      = vacation_request_form.commit_button :button_html => { :class => "button" }
      %li
        or
        = link_to "Cancel", section_vacation_requests_path(@section)
